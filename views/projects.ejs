<%- include('partials/navbar', { page: '/solutions/projects' }) %>

<section class="container mx-auto px-4 py-10">
  <h1 class="text-4xl font-bold text-center mb-6">All Climate Projects</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% projects.forEach(project => { %>
      <div class="card bg-base-100 shadow-xl">
        <figure>
          <img src="<%= project.imageUrl %>" alt="<%= project.title %>" class="w-full h-48 object-cover">
        </figure>
        <div class="card-body">
          <h2 class="card-title"><%= project.title %></h2>
          <p><%= project.summary.substring(0, 100) %>...</p>
          <div class="card-actions justify-end">
            <a href="/sites/<%= project.id %>" class="btn btn-primary">View Project</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</section>
